.container {
  padding: 24rpx;
}

.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(45, 140, 240, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.description {
  color: #666666;
  font-size: 26rpx;
}

.field {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.input,
.textarea,
.picker-value {
  width: 100%;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: #fdfdfd;
}

.picker-value {
  color: #333333;
}

.textarea {
  min-height: 160rpx;
}

.actions {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

button.primary {
  flex: 1;
  border: none;
  background-color: #2d8cf0;
  color: #ffffff;
}

button.danger {
  background-color: #ff4d4f;
  color: #ffffff;
}

.contract-card {
  border: 1px solid #e5e5e5;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: #fdfdfd;
}

.contract-card .title {
  font-size: 30rpx;
  font-weight: 500;
}

.contract-card .subtitle {
  font-size: 24rpx;
  color: #888888;
  margin-top: 8rpx;
}

.card-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.empty {
  text-align: center;
  color: #999999;
  font-size: 26rpx;
  padding: 40rpx 0;
}
